def perkalian(a, b):
    hasil = 0
    for _ in range(a):  # Ulang sebanyak 'a' kali
        hasil += b  # Tambahkan 'b' ke hasil
    return hasil

def ganjil(bawah, atas):
    if bawah < atas:
        return [i for i in range(bawah, atas + 1) if i % 2 != 0]  # Naik
    else:
        return [i for i in range(bawah, atas - 1, -1) if i % 2 != 0]  # Turun

